@model AddAuctionViewModel
@{
    this.ViewData["Title"] = "Sell Product";
}

<div class="container-lg">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-6 col-lg-8 col-md-10">
            <div class="form-wrapper wow fadeInUp" data-wow-duration="0.5s" data-wow-delay=".2s">
                <form class="w-100" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-inner">
                                <label asp-for="Title">Title *</label>
                                <input asp-for="Title" placeholder="Title">
                                <span asp-validation-for="@Model.Title" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-inner">
                                <label asp-for="Description">Description *</label>
                                <textarea rows="8" asp-for="Description" placeholder="Description" style="resize:none;"></textarea>
                                <span asp-validation-for="@Model.Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-inner" onchange="getSubCategories()">
                                <label asp-for="CategoryId">Category *</label>
                                <select asp-for="CategoryId">
                                    <option>Select category</option>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12" style="display: none">
                            <div class="form-inner" onchange="getSubCategoryId()">
                                <label asp-for="SubCateogoryId">Subcategory *</label>
                                <select asp-for="SubCateogoryId">
                                    <option>Select subcategory</option>
                                </select>
                                <span asp-validation-for="@Model.SubCateogoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-inner">
                                <label asp-for="Condition">Condition *</label>
                                <select asp-for="Condition">
                                    <option>Select condition</option>
                                    <option value="1">Brand new</option>
                                    <option value="2">Used</option>
                                </select>
                                <span asp-validation-for="@Model.Condition" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-inner">
                                <label asp-for="AuctionType">Type of sale *</label>
                                <select asp-for="AuctionType">
                                    <option>Select auction type</option>
                                    <option value="1">Standart auction</option>
                                    <option value="2">Auction with fixed price</option>
                                </select>
                                <span asp-validation-for="@Model.AuctionType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-inner">
                                <label asp-for="StartPrice">Price *</label>
                                <input asp-for="StartPrice"/>
                                <span asp-validation-for="@Model.StartPrice" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-inner">
                                <label asp-for="Duration">Duration *</label>
                                <input asp-for="Duration" placeholder="Enter duration in days" />
                                <span asp-validation-for="@Model.Duration" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-inner">
                                <label asp-for="StepAmount">Step *</label>
                                <input asp-for="StepAmount" placeholder="Enter step">
                                <span asp-validation-for="@Model.StepAmount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-inner">
                                <label asp-for="Images">Upload images *</label>
                                <input asp-for="Images" />
                                <span asp-validation-for="@Model.Images" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <button type="submit" asp-controller="Auction" asp-action="Sell" class="account-btn">Add Auction</button>
                </form>
            </div>
        </div>
    </div>
</div>