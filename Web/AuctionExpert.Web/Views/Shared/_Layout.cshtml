    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/css/register-page.css" asp-append-version="true">
    <link rel="icon" href="~/assets/images/bg/sm-logo.png" type="image/gif" sizes="20x20" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/animate.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/all.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/boxicons.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/bootstrap-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/assets/css/jquery-ui.css" asp-append-version="true">
