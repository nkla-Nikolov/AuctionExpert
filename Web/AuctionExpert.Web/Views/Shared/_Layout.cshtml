    <script src="~/assets/js/slick.js" asp-append-version="true"></script>
    <script src="~/assets/js/jquery.nice-select.js" asp-append-version="true"></script>
    <script src="~/assets/js/odometer.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/viewport.jquery.js" asp-append-version="true"></script>
    <script src="~/assets/js/jquery.magnific-popup.min.js" asp-append-version="true"></script>
